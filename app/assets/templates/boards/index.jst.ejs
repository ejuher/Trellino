<% boards.each( function(board) { %>
	<a href="#boards/<%= board.id %>">
		<div class="board-item list">
			<%= board.escape('title') %>
			<span class="glyphicon glyphicon-remove"></span>
		</div>
	</a>
<% }); %>
<div class="board-item list add">
	<div class="add-text">Add Board ...</div>
	<form role="form">
		<span class='glyphicon glyphicon-remove'></span>
		<input type="text" name="board[title]" class="form-control" placeholder="Board Name">
		<button type="submit" class="btn btn-default">Add</button>
	</form>
</div>

